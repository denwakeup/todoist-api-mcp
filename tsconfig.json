{
  "compilerOptions": {
    "rootDir": "./src",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "declaration": true
  },
  "include": ["**/*", "**/.*"],
  "exclude": ["node_modules", "dist"]
}
